package general;

public class Test {
	
	Integer[] list;
	
	Test(Integer[] l ) {
		list = l;
	}
	
	/*
	 * quicksort
	 */
	public void sort(int start, int end) {
		if(null==list)
			return;
		
		int  i = start;
		int j = end;
		int pivot = list[start + (end - start)/2];
		
		while (i<=j) {
			while(list[i] < pivot) {
				i++;
			}
			while(list[j] > pivot) {
				j--;
			}
			if(i<=j) {
				int temp = list[i];
				list[i] = list[j];
				list[j] = temp;
				i++;
				j--;
			}
		}
		
		if(start < j) {
			sort(start, j);
		} 
		if(end > i) {
			sort(i, end);
		}
	}

	public static void main(String[] args) {
		
		Integer[] a = {6,5,4,3,7,2,1};
		Test t = new Test(a);
		
		t.sort(0, a.length-1);
		StringBuilder sb = new StringBuilder();
		
		for(int i = 0 ; i<a.length; i++) {
			sb.append(a[i] + " ");
		}
		System.out.println(sb.toString());
	}
	
}
