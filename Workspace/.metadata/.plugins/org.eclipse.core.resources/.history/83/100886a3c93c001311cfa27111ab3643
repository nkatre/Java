package general;

import java.util.HashSet;
import java.util.LinkedList;
import java.util.List;
import java.util.Set;

/* Write a thread safe data structure such that there could be only one writer 
 * at a time but there could be n readers reading the data. 
 * You can consider that incrementing or decrementing a variable is an atomic operation.
 * If more than one threads try to write simultaneously then just select one randomly and let others wait
 * 
 * A readers-writer lock is like a mutex, in that it controls access to a shared resource, 
 * allowing concurrent access to multiple threads for reading but restricting access to a single thread for writes 
 * (or other changes) to the resource. 
 * A common use might be to control access to a data structure in memory that can't be updated atomically and 
 * isn't valid (and shouldn't be read by another thread) until the update is complete.
 * 
 */
public class ReaderWriterLock {
	
	private Queue<Writer> writerQueue;
	private Queue<Reader> readerQueue;
	
	private static Lock resource;
	private boolean locked;
	
	private ReaderWriterLock() {
		super();
		resource = new Lock();
		writerQueue = new Queue<Writer>();
		readerQueue = new Queue<Reader>();
	}
	
	public String toString() {
		return "resource:" + resource + " writerQueue:" + writerQueue + " readerQueue:" + readerQueue;
	}
	
	public void addWriter(Writer writer) {
		writerQueue.enQueue(writer);
	}
	
	public void addReader(Reader reader) {
		readerQueue.enQueue(reader);
	}
	
	public Process.lockType checkHolderType() {
		return resource.type;
	}
	
	public boolean isAvailableForLocking() {
		if(resource.type.equals(Process.lockType.NONE)) {
			return true;
		}
		return false;
	}
	
	public boolean handOverLockToNextWriter() {
		if ((resource.type.equals(Process.lockType.WRITER)) 
				&& (resource.holders.size() >= 1)) { // already held by a writer
			return false;
		} else if(writerQueue.size()==0) {
			return false;
		} 
		
		if(isAvailableForLocking()) {
			Process writer = writerQueue.poll();
			resource.holders.add(writer);
			return true;
		}
		
		return false;
	}
	
	public boolean handOverLockToReaders() {
		if ((resource.holders.size() == 0) && isAvailableForLocking()) {
			resource.type = Process.lockType.READER;
			while(readerQueue.size() !=0) {
				resource.holders.add(readerQueue.poll());
			}
			return true;
		}
		
		return false;
	}
	
	public boolean releaseLock(Process.lockType type, String requestor) {
		
		if(type.equals(Process.lockType.WRITER)) {
			return handOverLockToReaders();
		} else if (type.equals(Process.lockType.READER)) {
			return handOverLockToNextWriter();
		}
		
		return false;
	}
	
	public boolean seekLock(Process requestor) {
		
		if(requestor.getClass().equals(Reader.class)) {
			readerQueue.enQueue((Reader) requestor);
			if(isAvailableForLocking()) {
				return handOverLockToReaders();
			} else {
				return false;
			}
		} else if(requestor.getClass().equals(Writer.class)) {
			writerQueue.enQueue((Writer) requestor);
			if(isAvailableForLocking()) {
				return handOverLockToNextWriter();
			} else {
				return false;
			}
		} else {
			System.out.println("request for either read or write lock. the vaue passed is NONE");
			return false;
		}
		
		return false;
	}

	public static void main(String[] args) {
		
		ReaderWriterLock  rwl = new ReaderWriterLock();
		System.out.println(rwl);
		System.out.println(rwl.seekLock(Process.lockType.READER, "requestor1"));
		System.out.println(rwl + ":::" + rwl.releaseLock(Process.lockType.READER, "requestor1"));
		System.out.println(rwl + ":::" + rwl.seekLock(Process.lockType.WRITER, "requestor2"));
	}

	private static class Lock {
	    
	    private Process.lockType type;
	    private Set<Process> holders;
	    
	    private Lock() {
			super();
			type = Process.lockType.NONE;
			holders = new HashSet<Process>();
		}
		
		public String toString() {
			return type + ":" + holders;
		}
	}

	private static interface Process{
		int getId();
		void setId(int id);
		enum lockType { WRITER, READER, NONE }
	}

	private class Writer implements Process {
		
		private int id;
		
		Writer(int id) {
			super();
			setId(id);
		}
	
		@Override
		public int getId() {
			return id;
		}
	
		@Override
		public void setId(int id) {
			this.id = id;
		}
	}

	private class Reader implements Process {
		
		private int id;
		
		Reader (int id) {
			super();
			setId(id);
		}
	
		@Override
		public int getId() {
			return id;
		}
	
		@Override
		public void setId(int id) {
			this.id = id;
		}
	}
	

}
