package general;

public class Clock {
	
	int hour;
	
	int minute;
	
	static final double hourDegreePerMinute = 360.0/(60*12.0);
	
	static final double minuteDegreePerMinute = 360.0/(60);
	
	public void setTime(int hour, int min) {
		this.hour = hour;
		this.minute = min;
	}
	
	public double angleBetweenClockHands() {		
		return (minuteDegreePerMinute * minute) - (hourDegreePerMinute * hour);
	}
	
	public static void main(String[] args) {
		
		Clock clock = new Clock();
		clock.setTime(6, 20);
		System.out.println(clock.hourDegreePerMinute);
		System.out.println(clock.minuteDegreePerMinute);
		
	}
	

}
