package general;

public class InsertionSort<T> implements Comparable{
	
	T[] array;
	
	InsertionSort(T[] array) {
		super();
		this.array = array;
	}
	
	public T[] sort() {
		
		if(this.array == null)
			return null;
		
		int arraySize = this.array.length;
		
		for(int i = 1; i<arraySize; i++) {
			
			T key = array[i];
			int position  = -1;
			
			for(int j = (i-1); j >=0; j--) {
				if(key.compareTo(array[j]) < 0) {
					position = j;
				}
			}

			if(position !=-1) {
				for(int z=i; z>position; z--) {
					array[z]=array[z-1];
				}
				array[position]=key;
			}
		}
		return array;
	}
	
	public String toString(){
		
		if (null == array) {
			return null;
		}
		
		StringBuilder sb = new StringBuilder();
		
		for(int i= 0; i< array.length; i++) {
			sb.append(array[i]+ " ");
		}
		
		return sb.toString();
	}
	
	public static void main(String[] args) {
		Integer[] array = {9,2,1,4,3,2,1};
		InsertionSort iSort = new InsertionSort<Integer>(array);
		iSort.sort();
		System.out.println(iSort);
	}

	@Override
	public int compareTo(Object arg0) {
		// TODO Auto-generated method stub
		return 0;
	}

}
