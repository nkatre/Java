package general;

import java.util.LinkedList;
import java.util.List;

public class BubbleSort {
	
	Integer[] list;
	
	BubbleSort(Integer[] list) {
		this.list = list;
	}
	
	public void sort() {
		if(null==list)
			return;
		
		getMaxToEndOfArray(list);
		System.out.println(list.toString());
		
	}
	
	private Integer[] getMaxToEndOfArray(Integer[] list) {
		
		int max = list[list.length-1];
		int pointer=-1;
		for(int i=(list.length-2); i>=0;i--) {		
			if(list[i] > max) {
				max = list[i];
				pointer = i;
			}
		}
		list[list.length-1] = list[pointer];
		list[pointer] = max;
		
		return list;
	}
	
	
	public static void main(String[] args) {
		Integer[] list = {555,6,12,213,9};
		BubbleSort b = new BubbleSort(list);
		b.sort();
	}

}
