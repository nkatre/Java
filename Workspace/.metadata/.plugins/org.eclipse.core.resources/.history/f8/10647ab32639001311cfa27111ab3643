package general;

public class Clock {
	
	int hour;
	
	int minute;
	
	static final double hourDegree = 360.0/(60);
	static final double hourDegreePerMinute = 360.0/(60*12.0);
	
	static final double minuteDegree = 360.0/(60);
	
	public void setTime(int hour, int min) {
		this.hour = hour;
		this.minute = min;
	}
	
	public double angleBetweenClockHands() {	
		System.out.println(minuteDegree * minute);
		System.out.println((hourDegree * hour));
		return (minuteDegree * minute) - ((hourDegree * hour) + (hourDegreePerMinute * minute));
	}
	
	public String toString() {
		return hour + ":" + minute;
	}
	
	public static void main(String[] args) {
		
		Clock clock = new Clock();
		clock.setTime(6, 25);
		//System.out.println(clock.toString());
		System.out.println(clock.angleBetweenClockHands());
	
	}
	

}
