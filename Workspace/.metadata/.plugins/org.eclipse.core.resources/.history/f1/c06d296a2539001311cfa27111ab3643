package general;

public class ClockHandDegree {
	
	int hour;
	
	int minute;
	
	static final double hourDegreePerMinute = 360.0/(60*12.0);
	
	static final double minuteDegreePerMinute = 360.0/(60);
	
	public void setTime(int hour, int min) {
		this.hour = hour;
		this.minute = min;
	}
	
	public double angleBetweenClckHands() {
		
		
		
		return 0.0;
	}
	
	public static void main(String[] args) {
		
		ClockHandDegree clock = new ClockHandDegree();
		System.out.println(clock.hourDegreePerMinute);
		System.out.println(clock.minuteDegreePerMinute);
		
	}
	

}
